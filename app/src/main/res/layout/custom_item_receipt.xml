<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="1.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_IDDonhang"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:text="223232323"/>

            <TextView
                android:id="@+id/txt_Thoigiandat"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="20/11/2020"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_HinhReceipt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_TenSpReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:hint="Tra dao cam sa"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_GiaSpReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:hint="100000 d"
                    android:textColor="@color/background"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_XemThem"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Xem thêm"
                    android:textSize="13dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ReceiptStatus"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_marginLeft="30dp"
                android:hint="Hoan thanh" />

            <Button
                android:id="@+id/btn_DatLai"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:textColor="@color/background"
                android:text="Đặt lại"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>